{
  "name": "climate.js",
  "version": "1.0.0",
  "description": "Lightweight JavaScript package to theme your website based on the current weather",
  "main": "./dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "test": "npm run cover",
    "test:prod": "cross-env BABEL_ENV=production npm run test",
    "test:only": "mocha --require babel-core/register --require babel-polyfill --recursive",
    "test:watch": "npm test -- --watch",
    "test:examples": "node examples/",
    "cover": "istanbul cover _mocha -- --require babel-core/register --require babel-polyfill --recursive",
    "build": "cross-env BABEL_ENV=production babel src/climate.js --out-file ./dist/climate.min.js && cross-env BABEL_ENV=development babel src/climate.js --out-file ./dist/climate.js",
    "prepublish": "npm run clean && npm run test && npm run build",
    "example:location": "concurrently \"watchify examples/Location/src/location.js -o examples/Location/location.js\" \"live-server\""
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dbqeo/climate.js.git"
  },
  "keywords": [
    "npm",
    "node",
    "javascript",
    "climate",
    "weather",
    "theme",
    "climatejs"
  ],
  "author": "Ben Cuan <ben@bananiumlabs.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dbqeo/weather.js/issues"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            [
              "env",
              {
                "targets": {
                  "node": "current"
                }
              }
            ]
          ]
        }
      ]
    ]
  },
  "homepage": "https://github.com/dbqeo/weather.js#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.3.0",
    "babel-watch": "^2.0.7",
    "babelify": "^8.0.0",
    "chai": "^4.1.2",
    "concurrently": "^4.1.0",
    "cross-env": "^5.1.3",
    "istanbul": "^1.0.0-alpha",
    "mocha": "^5.0.0",
    "npm-run-parallel": "^0.6.0",
    "rimraf": "^2.6.2",
    "watchify": "^3.11.0"
  },
  "dependencies": {
    "acorn": "^6.0.4",
    "live-server": "^1.2.1"
  }
}
